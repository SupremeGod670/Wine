<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo base que você provavelmente já tem para a sua aplicação -->
    <style name="Theme.Wine" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Outros atributos do seu tema principal -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Estilo para o BACKGROUND, baseado no seu exemplo -->
    <style name="BACKGROUND">
        <item name="android:background">@color/background_color</item>
        <!-- Ou outra cor que defina seu BACKGROUND no XML original -->
    </style>

    <!-- Estilo para o EDITTEXT, baseado no seu exemplo -->
    <style name="EDITTEXT">
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textColorHint">@color/text_color_dark</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:background">@drawable/editbox_background</item>
        <!-- Ajustar conforme o seu drawable/editbox_background -->
    </style>

    <!-- Exemplo de como você pode ter um drawable/menu.xml -->
    <drawable name="menu_icon">@android:drawable/ic_menu_sort_by_size</drawable>
    <!-- Você precisará substituir com o seu drawable real para o ícone de menu -->
</resources>